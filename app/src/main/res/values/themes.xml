<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.App_TCare" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.App_TCare" parent="Base.Theme.App_TCare" />
    <style name="ShapeAppearanceOverlay.App.CornerSize50Percents" parent="">
        <item name="cornerSize">50%</item>
    </style>
    <style name="MyHintTextAppearance" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/grandstander_regular</item>
        <item name="android:textColor">#727272</item>
    </style>
    <style name="ShapeAppearanceOverlay.App.CornerSize8sdpPercents" parent="">
        <item name="cornerSize">8dp</item>
    </style>
    <style name="BottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/grandstander_regular</item>
    </style>

    <style name="BaseDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/blue</item>
    </style>
</resources>