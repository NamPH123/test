<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent" />
    <com.rd.PageIndicatorView
        android:id="@+id/pageIndicatorView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/viewPager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        app:piv_animationType="drop"
        app:piv_dynamicCount="true"
        app:piv_interactiveAnimation="true"
        app:piv_radius="4dp"
        app:piv_selectedColor="@color/_ffe500"
        app:piv_unselectedColor="#88888888"
        app:piv_viewPager="@id/viewPager" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/pageIndicatorView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="12dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/b_c_s_n_i_b_t"
                android:textSize="14sp"
                android:fontFamily="@font/grandstander_bold"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="6dp"
                android:layout_marginStart="12dp"
                android:paddingVertical="4dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvOther1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/grandstander_regular"
                android:text="@string/xem_th_m"
                android:textColor="@color/blue"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/tv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tv"
                android:layout_marginTop="6dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phong_kham"
                android:textSize="14sp"
                android:fontFamily="@font/grandstander_bold"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/rcv1"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="24dp"
                android:layout_marginStart="12dp"
                android:paddingVertical="4dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvOther2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/grandstander_regular"
                android:text="@string/xem_th_m"
                android:textColor="@color/blue"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/tv2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv2"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tv2"
                android:layout_marginTop="6dp"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/goi_kham"
                android:textSize="14sp"
                android:fontFamily="@font/grandstander_bold"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/rcv2"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="24dp"
                android:layout_marginStart="12dp"
                android:paddingVertical="4dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvOther3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/grandstander_regular"
                android:text="@string/xem_th_m"
                android:textColor="@color/blue"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/tv3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv3"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tv3"
                android:layout_marginTop="6dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>